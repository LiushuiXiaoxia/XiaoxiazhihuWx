.themes_container {
    display: flex;
    flex:1;
    width: 100%;
    flex-direction: column;
}
.list {
    flex:1;
}
.list_item {
    display: flex; 
    flex:1;
    flex-direction: column;
}

.list_top {
    flex:1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 10rpx;
    margin: 10rpx;
    
    border: 1rpx solid #eee;
    border-bottom: 1rpxpx solid #ccc;
    border-radius: 5rpx;
}

.list_left {
    flex: 1;
    display: flex;
    flex-direction: column;
}
.list_item_text {
    font-size: 40rpx;
}

.list_item_text2 {
    margin-top: 20rpx;
    font-size: 28rpx;
}

.list_item_icon {
    width: 120rpx;
    height:120rpx;
}

.line {
    flex:1;
    display: flex;
    height:2rpx;
    background-color:black;
}